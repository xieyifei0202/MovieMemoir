<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".function.search.SearchFragment"
    android:background="#fff"
    android:paddingTop="20dp"
    >

    <EditText
        android:id="@+id/edt_search"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:background="@drawable/shape_search_title"
        android:cursorVisible="true"
        android:hint="Please enter the name of the movie"
        android:lines="1"
        android:textColor="#333"
        android:textColorHint="#999999"
        android:textSize="12sp"
        android:paddingLeft="46dp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/tv_cancel"
        />

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/crm_search"
        android:padding="9dp"
        android:transitionName="search"
        android:layout_alignLeft="@+id/edt_search"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="-3dp"
        />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="20dp"
        android:text="搜索"
        android:textColor="#666666"
        android:textSize="14sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_cancel"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>